<div class="container">
  <% if @book_opinion.errors.any? %>
  <%=@book_opinion.errors.count %>件のエラーが発生しました
  <ul>
    <%@book_opinion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
    <%= render 'books/list', user: @user, book_opinion: @book_opinion %>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table books">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books .each do |book| %>
            <tbody>
              <tr>
                <td><%= link_to(user_path(book.user.id) ) do %>
                <%=image_tag book.user.get_profile_image(150,150) %>
                 <% end %></td>
                <td><%= link_to(book_path(book.id) ) do %>
                      <%= book.title %>
                     <% end %></td>
                <td><%= book.body %></td>
              </tr>
            </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>

